import random

n = random.choice(range(2, 11))

for i in range(int(n)):
    for j in range(int(n) - i - 1):
        print(" ", end="")
    for q in range(2 * i):
        print("$", end="")
    print("$")
for a in range(int(n) - 1):
    for b in range(int(n) - 1):
        print(" ", end="")
    print("|")
print("The tree's hight : " + str(n))
